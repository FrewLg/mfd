{% extends 'base.html.twig' %}

{% block title %}AcademicYear  
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
							Academic Year
							</h4>
							Total: ({{academic_years|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('academic_year_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>Year_name</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for academic_year in academic_years %}
								<tr>
									<td>{{ academic_year.id }}</td>
									<td>{{ academic_year.yearName }}</td>
									<td>
										<a href="{{ path('academic_year_show', {'id': academic_year.id}) }}" class="btn btn-sm btn-soft-primary">show</a>
										<a href="{{ path('academic_year_edit', {'id': academic_year.id}) }}" class="btn btn-sm btn-soft-warning">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="3">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
