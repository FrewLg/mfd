{% extends 'base.html.twig' %}

{% block title %}College
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								College
							</h4>
							Total: ({{colleges|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('college_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for college in colleges %}
								<tr>
									<td>{{ loop.index }}</td>
									<td>{{ college.name }}</td>
									<td>
										<a href="{{ path('college_show', {'id': college.id}) }}" class='btn btn-soft-success btn-xs'>show</a>
										<a href="{{ path('college_edit', {'id': college.id}) }}" class='btn btn-soft-warning btn-xs'>edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="3">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
