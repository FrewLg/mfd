<div class="chat-box-right">
	<div class="chat-header">
		<a href="apps-chat.html" class="media">
			<div class="media-left">
				<img src="assets/images/users/user-4.jpg" alt="user" class="rounded-circle thumb-md">
			</div>
			<!-- media-left -->
			<div class="media-body">
				<div>
					<h6 class="m-0">Mary Schneider</h6>
					<p class="mb-0">Last seen: 2 hours ago</p>
				</div>
			</div>
			<!-- end media-body -->
		</a>
		<!--end media-->
		<div class="chat-features">
			<div class="d-none d-sm-inline-block">
				<a href="apps-chat.html">
					<i class="fas fa-phone"></i>
				</a>
				<a href="apps-chat.html">
					<i class="fas fa-video"></i>
				</a>
				<a href="apps-chat.html">
					<i class="fas fa-trash-alt"></i>
				</a>
				<a href="apps-chat.html">
					<i class="fas fa-ellipsis-v"></i>
				</a>
			</div>
		</div>
		<!-- end chat-features -->
	</div>
	<!-- end chat-header -->
	<div class="chat-body" data-simplebar="init">
		<div class="simplebar-wrapper" style="margin: -16px;">
			<div class="simplebar-height-auto-observer-wrapper">
				<div class="simplebar-height-auto-observer"></div>
			</div>
			<div class="simplebar-mask">
				<div class="simplebar-offset" style="right: 0px; bottom: 0px;">
					<div class="simplebar-content-wrapper" style="height: 100%; overflow: hidden scroll;">
						<div class="simplebar-content" style="padding: 16px;">
							<div class="chat-detail">

								{% for discussions in application.applicationFeedback  %}
									<div class="media">


										{% if  discussions.feedbackFrom==app.user   %}
											<div class="media-img">

												{% if discussions.feedbackFrom.userInfo and discussions.feedbackFrom.userInfo.image %}
													<img src="{{ asset('files/profile_pictures/'~discussions.feedbackFrom.userInfo.image ) }}" alt="" class="rounded-circle thumb-md">
												{% else %}
													<img src="{{ asset('/img/defaultuser.png') }}" class="rounded-circle thumb-md ">
												{% endif %}
											</div>

											<div class="media-body ">

												<div class="chat-msg">
													<p>{{ discussions.description}}</p>
												</div>

												<div class="chat-time">{{discussions.createdAt | date('Y-m-d h:i a')}}</div>
											</div>
											<!--end media-body-->
										</div>
										<!--end media-->
									{% else %}

										<div class="media-body reverse">
											<div class="chat-msg">
												<p>{{ discussions.description}}</p>
											</div>
											<div class="chat-time">{{discussions.createdAt | date('Y-m-d h:i a')}}</div>

										</div>
										<!--end media-body-->
										<div class="media-img">
											{% if discussions.feedbackFrom.userInfo and discussions.feedbackFrom.userInfo.image %}
												<img src="{{ asset('files/profile_pictures/'~discussions.feedbackFrom.userInfo.image ) }}" alt="" class="rounded-circle thumb-md">
											{% else %}
												<img src="{{ asset('/img/defaultuser.png') }}" class="rounded-circle thumb-md ">
											{% endif %}
										</div>
										<!--end media-->
									{% endif %}
								</div>

							{% endfor %}


							<!--end media-->
						</div>
						<!-- end chat-detail -->
					 
				</div>
			</div>
		</div>
		<div class="simplebar-placeholder" style="width: auto; height: 699px;"></div>
	</div>
	<div class="simplebar-track simplebar-horizontal" style="visibility: hidden;">
		<div class="simplebar-scrollbar" style="width: 0px; display: none;"></div>
	</div>
	<div class="simplebar-track simplebar-vertical" style="visibility: visible;">
		<div class="simplebar-scrollbar" style="height: 481px; transform: translate3d(0px, 0px, 0px); display: block;"></div>
	</div>
</div>
<!-- end chat-body -->
<div class="chat-footer">
	<div class="row">
		<div class="col-12 col-md-9">
			<span class="chat-admin"><img src="assets/images/users/user-8.jpg" alt="user" class="rounded-circle thumb-sm"></span>

			{{ form_start(appfeedbfrom) }}
			{{ form_widget(appfeedbfrom) }}

			{{ form_end(appfeedbfrom) }}

			{# <input type="text" class="form-control" placeholder="Type something here..."> #}
		</div>
		<!-- col-8 -->
		<div class="col-3 text-right">
			<div class="d-none d-sm-inline-block chat-features">
				<a href="apps-chat.html">
					<i class="fas fa-camera"></i>
				</a>
				<a href="apps-chat.html">
					<i class="fas fa-paperclip"></i>
				</a>
				<a href="apps-chat.html">
					<i class="fas fa-microphone"></i>
				</a>
			</div>
		</div>
		<!-- end col -->
	</div>
	<!-- end row -->
</div> 
