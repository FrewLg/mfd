{% extends 'base.html.twig' %}

{% block title %}Suffixe index{% endblock %}

{% block body %}
    
   <div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								Suffixes  
							</h4>
							Total: ({{suffixes|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('suffixe_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					<table class="table table-bordered table-striped">
					 
                       <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for suffixe in suffixes %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ suffixe.name }}</td>
                <td>{{ suffixe.description }}</td>
                <td>
                    <a href="{{ path('suffixe_show', {'id': suffixe.id}) }}" class="btn btn-sm btn-soft-success">show</a>
                    <a href="{{ path('suffixe_edit', {'id': suffixe.id}) }}" class="btn btn-sm btn-soft-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 
			</div>
			</div>
		</div>
	</div>
{% endblock %}
