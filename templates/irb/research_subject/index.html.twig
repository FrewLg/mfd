{% extends 'base.html.twig' %}

{% block title %}Research Subject
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								All Research Subject
							</h4>
							Total: ({{research_subjects|length}}) 
						</div>
						<!--end col-->
						<div class="col-auto"> 
							<a href="{{ path('i_r_b_research_subject_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a> 
						</div>
						<!--end col-->
					</div>
				</div> 
				<div class="card-body"> 
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Category</th>
								<th>Type</th>
								{# <th>Actions</th> #}
							</tr>
						</thead>
						<tbody>
							{% for research_subject in research_subjects %}
								<tr>
									<td>{{ loop.index }}</td>
									<td>{{ research_subject.name }}</td>
									<td>{{ research_subject.category }}</td>
									{# <td>{{ research_subject.type }}</td> #}
									<td>
										<a href="{{ path('i_r_b_research_subject_show', {'id': research_subject.id}) }}" class="btn btn-sm btn-soft-primary">show</a>
										<a href="{{ path('i_r_b_research_subject_edit', {'id': research_subject.id}) }}" class="btn btn-sm btn-soft-warning">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
