{% extends 'base.html.twig' %}

{% block title %}Research Subject Category
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								All Research Subject Category
							</h4>
							Total: ({{research_subject_categories|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('i_r_b_research_subject_category_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Description</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for research_subject_category in research_subject_categories %}
								<tr>
									<td>{{ research_subject_category.id }}</td>
									<td>{{ research_subject_category.name }}</td>
									<td>{{ research_subject_category.description }}</td>
									<td>
										<a href="{{ path('i_r_b_research_subject_category_show', {'id': research_subject_category.id}) }}" class="btn btn-sm btn-soft-primary">show</a>
										<a href="{{ path('i_r_b_research_subject_category_edit', {'id': research_subject_category.id}) }}" class="btn btn-sm btn-soft-warning">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
