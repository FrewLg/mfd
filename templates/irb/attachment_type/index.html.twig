{% extends 'base.html.twig' %}

{% block title %}Attachment Type {% endblock %}

{% block body %}
    <div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								All attachment ype
							</h4>
							Total: ({{attachment_types|length}})

						</div>
						<!--end col-->
						<div class="col-auto">


							<a href="{{ path('i_r_b_attachment_type_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>

						</div>
						<!--end col-->
					</div>
				</div>
				<!--end card-header-->
				<div class="card-body">


					<table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Required</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attachment_type in attachment_types %}
            <tr>
                <td>{{ attachment_type.id }}</td>
                <td>{{ attachment_type.name }}</td>
                <td>{{ attachment_type.description }}</td>
                <td>{{ attachment_type.isRequired ? "Yes":"No" }}</td>
                <td>
                    <a href="{{ path('i_r_b_attachment_type_show', {'id': attachment_type.id}) }}" class="btn btn-sm btn-soft-primary">show</a>
                    <a href="{{ path('i_r_b_attachment_type_edit', {'id': attachment_type.id}) }}" class="btn btn-sm btn-soft-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	</div>
			</div>
		</div>
	</div>

 {% endblock %}
