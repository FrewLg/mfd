{# {% extends 'base.html.twig' %} #}
{% extends 'homelayout.html.twig' %}

{% block title %}Submission
{% endblock %}
{% block container_title %}Submission review
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-lg-9">

			
 
			<div
				class="card-body">
				<!-- Nav tabs -->
				<ul class="nav nav-pills nav-justified" role="tablist">
					<li class="nav-item  waves-effect waves-light">
						<a class="nav-link " data-bs-toggle="tab" href="#home" role="tab" aria-selected="true">Research detail</a>
					</li> 
					
					<li class="nav-item  waves-effect waves-light">
						<a class="nav-link active" data-bs-toggle="tab" href="#profile" role="tab" aria-selected="false">Revision</a>
					</li>
				</ul>

				<!-- Tab panes -->
				<div class="tab-content">
					<div class="tab-pane p-3  " id="home" role="tabpanel">
						<div class="card">
						<div class="card-header">
						
						<h5>Details
								</h5> </div>
						<div class="card-body">
							
							<div class="row">
				<div class="col-lg-12">
					<dl class="row mb-0">
						<div class="col-sm-2 text-sm-right float-right pull-right">
							<dt>
								{% if submission.CreatedAt %}
									{{ submission.CreatedAt|date() }}
								{% endif %}
							</dt>
						</div>
						<div class="col-sm-9 text-sm-left">
							<dd>
								<div class="nowrap">
									<div style="width: 100%;" class="font-16 m-0 fw-bold">
										<strong>
											{{ submission.Title }} 
										</strong>
									</div>
								</div>
							</dd>
						</div>
						<div class="col-sm-1 text-sm-left">
							<dd>
								<div class="nowrap">
									<div style="width: 100%;" class="text-success strong"></div>
								</div>
							</dd>
						</div>
					</dl>
				</div>
			</div>

							<table class="table shoping-cart-table">

								<tbody>
									<tr>

										<td class="desc">
											<h3>
												<a href="#" class="text-navy">
													Description
												</a>
											</h3>
											<p class="medium">

												{{ submission.description | raw }}
											</p>
											<h3>
												Background
											</h3>
											 


										</td>
									</tr>
								</tbody>
							</table>
						</div>
						</div>
					</div>
					 
					<div class="tab-pane  p-3	 active" id="profile" role="tabpanel">

						<div class="card">
							<div class="card-header">
								<h5>Revise
								</h5>
							</div>
							<div class="card-body">

								{{ form_start(form) }}
								{{ form_widget(form) }}
								<button class="btn btn-primary">{{ button_label|default('Submit Review') }}</button>
								{{ form_end(form) }}
							</div>
						</div>
					</div>

				</div>
			</div>
			{# </div> #}
		</div>
		<div class="col-lg-3">


			<div class="card">
				<div class="card-header">
					<h5>Review info</h5>
				</div>
				<!--end card-header-->

				<div class="card-body ">
					<div
						class="text-">
						{# {{ review_assignment.submission.callForProposal}} #}

					

						<br>
						<br>

					

<br>

					
						
						
						<br>


						<br>
						<p class="text-muted  mb-0 font-13">
							<span class="text-dark">

								Invitation Sent At:
								{{ review_assignment.InvitationSentAt ? review_assignment.InvitationSentAt|date('Y-m-d H:i') : '' }}
								<br>
								Review duedate:
								{{ review_assignment.duedate ? review_assignment.duedate|date('Y-m-d') : '' }}

							</span>


						</p>
					</div>
					<div class="row mt-2 d-flex align-items-center">
						<div
							class="col">
							{# <h5 class="font-16 m-0 fw-bold">1</h5> #}
							<p class="mb-0 text-muted">

								<h5>Attachment files</h5>

								<a class="badge bg-primary" href="{{ asset('/files/proposals/review_files/'~ review_assignment.FileTobeReviewedeclined ) }}">
									Proposal  file PDF
									<i class="fa fa-download"></i>
								</a>


							</p><hr>


							{# <script src="/ui/js/jquery.min.js"></script> #}

						</div>
					</div>
				</div>
			</div>


		</div>
	</div>
{% endblock %}
{% block javascript  %}
	<script>
		$('.form-check-input').change(function () {
var min = $(this).attr('data-min');
var max = $(this).attr('data-max');
$(this).closest('.parent').find('.score').attr({"max": max, "min": min});
});
	</script>
{% endblock javascript  %}
