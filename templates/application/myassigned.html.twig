{% extends 'base.html.twig' %}
{% block title %}Submission
{% endblock %}
{% block container_title %}IRB Application
{% endblock %}
{% block body %}
	<div class="row">
		<div class="pb-4">
			<ul class="nav nav-pills " id="pills-tab" role="tablist">
				<li class="nav-item">
					<a class="nav-link active" id="Profile_Project_tab" data-bs-toggle="pill" href="#my_assigned">IRB Applications  I am assigned to ({{myreviews|length + closeds|length }})</a>
				</li>

			</ul>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="tab-content" id="pills-tabContent">
					<div class="tab-pane fade active show" id="Profile_Project" role="tabpanel" aria-labelledby="my_assigned">

						<div class="row">
							{% if is_granted('ROLE_SECRETARY') or is_granted("ROLE_MEMBER") or is_granted("ROLE_CHAIR")  %}
								<div class="card">
									<div class="card-header">
										<h4 class="card-title">All Active IRB Review Assignment
											{% if myreviews|length>0%}

												<a href="#" class="avatar-box thumb-xxs align-self-center">
													<span class="avatar-title bg-soft-primary rounded-circle font-13 font-weight-normal">
														{{myreviews|length}}

													</span>
												</a>
												{% else %}

											{% endif %}

										</h4>
										<p class="text-muted mb-0">
											All active and under review process
										</p>
									</div>
									<!--end card-header-->
									<div class="card-body">
										<div class="table-responsive-sm">
											<table class="table table-bordered table-sm mb-0">
												<thead class="thead-light">


													{% if myreviews|length>0%}
														<tr>

															<th>#</th>
															<th>Title</th>
															<th>Reviewer</th>
															<th>Review due date</th>
															<th>Status</th>
														</tr>
													{% endif %}

												</thead>
												<tbody>
													{% for myreview in myreviews %}
														<tr>
															<td>{{ loop.index }}</td>
															<td>
																<a href="{{ path('review_application', {'id': myreview.id}) }} " class='text-primary'>
																	{{ myreview.application.title }}
																</a>
															</td>
															<td>
																{{ myreview.irbreviewer }}
															</td>

															<td>
																{% if myreview.dueDate %}
																	{{ myreview.dueDate|date('d, M Y h:i a') }}
																{% endif %}
															</td>
															<td>


																<span class='badge badge-soft-{{ myreview.application.status.type }}'>
																	{{  myreview.application.status }}
																</span>
															</td>
														</tr>
													{% else %}
														No records found  under this section
													{% endfor %}

												</tbody>
											</table>
										</div>
									</div>
									<!--end card-body-->
								</div>


								 
								
								<div class="card">
									<div class="card-header">
										<h4 class="card-title">Closed IRB Review Invitations
											{% if closeds|length>0%}
												<a href="#" class="avatar-box thumb-xxs align-self-center">
													<span class="avatar-title bg-soft-primary rounded-circle font-13 font-weight-normal">
														{{closeds|length}}

													</span>
												</a>
												{% else %}
											{% endif %}
										</h4>
										<p class="text-muted mb-0">
											Closed  and inactive review assignment
										</p>
									</div>
									<!--end card-header-->
									<div class="card-body">
										<div class="table-responsive-sm">
											<table class="table table-bordered table-sm mb-0">
												<thead class="thead-light">
													{% if closeds|length>0%}
														<tr>
															<th>#</th>
															<th>Title</th>
															<th>Invitation sent date</th>
															<th>Review due date</th>
															<th>Closed at</th>
														</tr>
													{% endif %}

													{% for myreview in closeds %}
														<tr>
															<td>{{ loop.index }}</td>
															<td>{{ myreview.application.title }}</td>

															<td>
																{% if myreview.InvitationSentAt %}
																	{{  myreview.InvitationSentAt|date('d, M Y h:i a') }}
																{% endif %}
															</td>
															<td>
																{% if myreview.dueDate %}
																	{{ myreview.dueDate|date('d, M Y h:i a') }}
																{% endif %}
															</td>
															<td>

																{% if myreview.InvitationSentAt %}
																	{{ myreview.InvitationSentAt|date('d, M Y h:i a') }}
																{% endif %}


															</td>

														</tr>
													{% else %}
														No records found  under this section

													{% endfor %}
												</thead>
											</tbody>
										</table>
									</div>
									<!--end /tableresponsive-->
								</div>

							{% else %}

							{% endif %}
							<!--end card-body-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
