													<label class="form-label mt-3 mb-1">{{group.name}}
													</label>

													<div class="row">
														{% for strategy in application.applicationMitigationStrategies | filter(strat => strat.strategy.formGroup == group) %}

															<div class="form-check">
																<input class="form-check-input" checked type="checkbox" value="" id="s{{strategy.id}}" disabled>
																<label class="form-check-label" for="s{{strategy.id}}">
																	{{ strategy.strategy }}
																</label>
															</div>

														{% endfor %}
													</div>
												{% endfor %}

											</div>
											<div class="tab-pane p-3" id="amendment" role="tabpanel">


												<div class="col-md-12">
													<div class="card">
														<div class="card-header">
															<h4 class="card-title">{% trans %}Amendments{% endtrans %}</h4>

														</div>
														<!--end card-header-->
