																			</tr>


																		{% else %}
																			<tr>
																				<td colspan="4">{% trans %}No record{% endtrans %}</td>
																			</tr>
																		{% endfor %}

																	</tbody>
																</table>
																<!--end /table-->
															</div>
															<!--end /tableresponsive-->
														</div>
														<!--end card-body-->
													</div>
													<!--end card-->
												</div>
											</div>

											<div class="tab-pane p-3" id="revisions" role="tabpanel">


												<div class="col-md-12">
													<div class="card">
														<div class="card-header">
															<h4 class="card-title">{% trans %}Revisions{% endtrans %}</h4>

														</div>
														<!--end card-header-->
														<div class="card-body">
															<div class="">

