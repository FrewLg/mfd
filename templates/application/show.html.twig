										<div class="row no-gutters">

											<div class="col-md-12">
												<div class="card-header">
													<div class="row align-items-center">
														<div class="col">
															<h4 class="card-title">{% trans %}Review Decision{% endtrans %}</h4>
														</div>
														<!--end col-->
														<div class="col-auto">

															<span class="badge badge-outline-light">{{ review.createdAt|date('Y-m-d') }}</span>
														</div>
														<!--end col-->
													</div>
													<!--end row-->
												</div>
												<!--end card-header-->
