											<form method="post">
												<input hidden name="renewal" value="true">

												<button type="submit" class="m-1 btn btn-outline-primary float-right">
													<span class="fa fa-spinner m-1"></span>
													{% trans %}Renew Clearance{% endtrans %}</button>
											</form>
										{% endif %}

