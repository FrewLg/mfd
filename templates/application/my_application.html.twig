{% extends 'base.html.twig' %}

{% block title %}Application
{% endblock %}
{% block container_title %}My Applications
{% endblock %}
{% block body %}
	<div class="row">
		<div class="pb-4">
			<ul class="nav-border nav nav-pills mb-0" id="pills-tab" role="tablist">
				<li class="nav-item">
					<a class="nav-link active" id="Profile_Project_tab" data-bs-toggle="pill" href="pages-profile.html#Profile_Project">My IRB Applications</a>
				</li> 
			</ul>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="tab-content" id="pills-tabContent">
					<div class="tab-pane fade active show" id="Profile_Project" role="tabpanel" aria-labelledby="Profile_Project_tab">
		 
							<div class="row"> 
							{% for application in applications %} 

                            <div class="card">
								<div class="card-body">
									{# {% if application.awardgranted %} 
									<div class="ribbon2 rib2-success">
										<span class="ribbon4-band ribbon4-band-primary text-white text-center">
									<i class="fas fa-badge-check"></i>
										  </span>
									</div>
									{% endif %} #}
									<!--end ribbon-->
									<div class="row">
										<div class="col-auto">
 										</div>
										<!--end col-->
										<div class="col align-self-center">
										
										<a href="{{ path('application_show', {'id': application.id}) }}" class="font-18 fw-semibold mb-2">
										{{ application.title }} </a>
											<p class="font-13 fw-semibold mb-2"> Application type:
												{{
                                                    application.projectType |raw}}</p>
										
										<small class="text- ">
										{% if application.createdAt %}
											{{
                                                application.createdAt|date() }}
										{% endif %}
									</small> 		
										<p>
										<a href="{{ path('application_show', {'id': application.id}) }}" class="btn btn-soft-primary btn-sm">Show details</a>
										 
									</p>
									<div class="collapse" id="expand{{ application.id }}">
										<div class="card card-body">
                                        
                                        {% if application.status %}
								<span class='badge badge-soft-{{ application.status.type }}'>
																{{  application.status }}
															</span>
											
											{% endif %}
                                             </div>
									</div>
										</div> 
									</div> 
								</div> 
							</div> 

						{% else %}
							<tr>
								<td colspan="8">
									<span class='text-danger'>You have not made an application  yet!</span>
									<br> 

								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div> 

		</div>

	</div>
{% endblock %}
