 

{% if submission.complete==0%}

<small class="float-end ms-2 pt-1 font-10">0%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-danger" role="progressbar" style="width: 0%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>

	{% elseif submission.published==1%} 
        
        <small class="float-end ms-2 pt-1 font-10">100%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>
	{% elseif submission.researchReports|length>2 %}
    <small class="float-end ms-2 pt-1 font-10">90%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-info" role="progressbar" style="width: 90%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>

	{% elseif submission.researchReports|length>1 %}
		<small class="float-end ms-2 pt-1 font-10">80%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-info" role="progressbar" style="width: 80%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>

	{% elseif submission.researchReports|length>0 %}
		<small class="float-end ms-2 pt-1 font-10">70%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-purple" role="progressbar" style="width: 70%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>

	{% elseif submission.researchReportSubmissionSettings|length>0 %}
	<small class="float-end ms-2 pt-1 font-10">50%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-primary" role="progressbar" style="width: 50%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>

	{% elseif submission.awardgranted==1  %}
		<small class="float-end ms-2 pt-1 font-10">40%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-primary" role="progressbar" style="width: 40%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>

	{% elseif submission.reviews|length>2 %}
		<small class="float-end ms-2 pt-1 font-10">30%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-pink" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" 
    aria-valuemax="100"></div>

</div>

	{% elseif submission.reviewAssignments|length>1 %}
	<small class="float-end ms-2 pt-1 font-10">20%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-secondary" role="progressbar" style="width: 20%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>

	{% elseif submission.complete==1  %}
		<small class="float-end ms-2 pt-1 font-10">10%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-secondary" role="progressbar" style="width: 10%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>

	{% else  %}
	<small class="float-end ms-2 pt-1 font-10">1%</small>
<div class="progress mt-2" style="height:3px;">
	<div class="progress-bar bg-danger" role="progressbar" style="width: 1%;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>

</div>


{% endif %}
