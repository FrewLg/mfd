<div class="row">
	<div
		class="col-md-12">
		<!-- The time line -->
		<div
			class="timeline">
			<!-- timeline time label -->
			<div class="time-label">
				<span class="bg-red">{{research_report_phase.startDate|date('Y-m-d')}}</span>
			</div>
			<!-- /.timeline-label -->
			<!-- timeline item -->
			<div>
				<i class="fas fa-clock bg-green"></i>
				<div class="timeline-item">
					<span class="time">
						<i class="fas fa-clock"></i>
						{{research_report_phase.startDate|date('Y-m-d')}}</span>
					<h3 class="timeline-header">
						<a href="#">Start Date ({{research_report_phase.startDate|date('Y-m-d')}})</a>
					</h3>

					<div
						class="timeline-body">{# First Report should be submitted with in this days #}
					</div>
					<div
						class="timeline-footer">{# <a class="btn btn-primary btn-sm">Change</a> #}
					</div>
				</div>
			</div>


			<!-- END timeline item -->
			{% for key,phase in research_report_phase.phases %}


				<!-- timeline item -->
				<div>
					<i class="fas fa-clock bg-blue"></i>
					<div class="timeline-item">
						<span class="time">
							<i class="fas fa-clock"></i>
							{{research_report_phase.phases[key]|date('Y-m-d')}}</span>
						<h3 class="timeline-header">
							<a href="#">{{"Phase "~key}}
								({{research_report_phase.phases[key]|date('Y-m-d')}})</a>
						</h3>

						<div
							class="timeline-body">{# {{" Phase "~key}} Report should be submitted with in {{research_report_phase.maximumDuration}}  days #}
						</div>
						<div
							class="timeline-footer">{# <a class="btn btn-primary btn-sm">Read more</a> #}
						</div>
					</div>
				</div>
				<!-- END timeline item -->

			{% endfor %}
			<!-- timeline item -->
			<div>
				<i class="fas fa-clock bg-red"></i>
				<div class="timeline-item">
					<span class="time">
						<i class="fas fa-clock"></i>
						<b>
							{{research_report_phase.endDate?research_report_phase.endDate|date('Y-m-d'):""}}</b>
					</span>
					<h3 class="timeline-header no-border">
						<a href="#">Terminal Report({{research_report_phase.endDate?research_report_phase.endDate|date('Y-m-d'):""}})</a>
					</h3>
					<div
						class="timeline-body">{# Terminal report should be submitted before end     #}
					</div>
					<div
						class="timeline-footer">{# <a class="btn btn-primary btn-sm">Read more</a> #}
					</div>
				</div>
			</div>
			<!-- END timeline item -->

			<div class="time-label">
				<span class="bg-red">{{research_report_phase.endDate|date('Y-m-d')}}</span>
			</div>
		</div>
	</div>
	<!-- /.col -->
</div>
