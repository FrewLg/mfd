{% extends 'base.html.twig' %}

{% block title %}Submission
{% endblock %}
{% block container_title %}Researches
{% endblock %}
{% block body %}
	<div class="row">


		<div class="pb-4">
			<ul class="nav-border nav nav-pills mb-0" id="pills-tab" role="tablist">
				<li class="nav-item">
					<a class="nav-link active " id="Profile_Project_tab" data-bs-toggle="pill" href="pages-profile.html#Profile_Project">A Researches I am member as a Co-PI
					 
										<span class="avatar-title bg-soft-info rounded-circle font-13 font-weight-normal">
											&nbsp;{{  collaborations|length }}
										</span>
									 

					</a>
				</li> 
			</ul>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="tab-content" id="pills-tabContent">
					<div class="tab-pane fade active show" id="Profile_Project" role="tabpanel" aria-labelledby="Profile_Project_tab">
						<div class="row">

							{% if collaborations|length>0%}
								{% for collaboration in collaborations %}

									<div class="card">

										<div class="card-body">
											{% if collaboration.submission.awardgranted %}
												<div class="ribbon2 rib2-success">
													<span class="ribbon4-band ribbon4-band-primary text-white text-center">
														<i class="fas fa-badge-check"></i>
													</span>
												</div>
											{% endif %}
											<!--end ribbon-->
											<div class="row">
												<div
													class="col-auto">{# <img src="profile_files/dastyle.jpg" alt="user" class="align-self-center mb-3 mb-lg-0" height="150"> #}
												</div>
												<!--end col-->
												<div class="col align-self-center">

													<a href="{{ path('membershipdetails', {'id': collaboration.id}) }}" class="font-18 fw-semibold mb-2">
														{{ collaboration.submission.title }}

														{% if collaboration.submission.subTitle %}
															:
															{{ collaboration.submission.subTitle }}
														{% endif %}
													</a>
													<br>
													<strong>

														Thematic area:
														{{ collaboration.submission.thematicArea |raw}}

													</strong>
													<p class="text-muted">Principal Investigator :
														{{ collaboration.submission.author }}
														<br>
														Sent at :
														{% if collaboration.submission.sentAt %}
															{{
                                                collaboration.submission.sentAt|date() }}
														{% endif %}
													</p>


												</p>
	{% if collaboration.submission.callForProposal.coPoConfirmation ==1 %}

												{% if collaboration.confirmed ==0 or collaboration.confirmed =='' %}
													<a href="{{ path('accept_involvemet', {'id': collaboration.id, 'sub': collaboration.submission.id}) }}" class="btn btn-soft-primary btn-sm">Confirm Research Membership</a>

												{% elseif collaboration.confirmed ==1%}

													<a href="" class="btn btn-soft-dark btn-sm">Confirmed</a>

												{% endif %}
												{% endif %}

												{# <a href="#" class="btn btn-soft-primary btn-sm">Appproval</a> #}

												{# <a class="btn btn-sm  btn-primary" data-bs-toggle="collapse" href="#expand{{ collaboration.submission.id }}" role="button" aria-expanded="false" aria-controls="expand{{ collaboration.submission.id }}">
							<i class="fa fa-chevron-right"></i>
						</a> #}
</p>
											<div class="collapse" id="expand{{ collaboration.submission.id }}">
												<div class="card card-body">
	{% if collaboration.submission.callForProposal.coPoConfirmation ==1 %}

													{% if collaboration.confirmed ==0 or collaboration.confirmed =='' %}Not confirmed
													{% elseif collaboration.confirmed ==1%}
														Confirmed
														
														{%endif%}
														{%endif%}

														<div>
															<a class="btn btn-xs btn-primary" href="{{ path('accept_involvemet', {'id': collaboration.id, 'sub': collaboration.submission.id}) }}">
																<i class="fa fa-check"></i>
															</a>


														</div>
													</div>
												</div>


											</div>


										</div>


										<!--end col-->
									</div>
									<!--end row-->
								</div>

							{% endfor %}
						{% else %}

							<span class='text-danger'>Not involved with a CO-PI role  yet!</span>

							<br>
						{% endif %}

					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
