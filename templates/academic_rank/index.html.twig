{% extends 'base.html.twig' %}

{% block title %}Academic Rank {% endblock %}

{% block body %}
    
   <div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								Academic Rank   
							</h4>
							Total: ({{academic_ranks|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('academic_rank_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					<table class="table table-bordered table-striped">
					 
                    
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for academic_rank in academic_ranks %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ academic_rank.name }}</td>
                <td>{{ academic_rank.description }}</td>
                <td>
                    <a href="{{ path('academic_rank_show', {'id': academic_rank.id}) }}" class="btn btn-sm btn-soft-success">show</a>
                    <a href="{{ path('academic_rank_edit', {'id': academic_rank.id}) }}" class="btn btn-sm btn-soft-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



			</div>
			</div>
		</div>
	</div>
 {% endblock %}
