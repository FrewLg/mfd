{% extends 'base.html.twig' %}

{% block title %}Title  
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								Title
							</h4>
							Total: ({{titles|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('title_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for title in titles %}
								<tr>
									<td>{{ title.id }}</td>
									<td>{{ title.name }}</td>
									<td>
										<a href="{{ path('title_show', {'id': title.id}) }}" class="btn btn-xs btn-soft-info">show</a>
										<a href="{{ path('title_edit', {'id': title.id}) }}" class="btn btn-xs btn-soft-warning">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="3">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
