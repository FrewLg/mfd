{% extends 'base.html.twig' %}
{% block title %}My projects
{% endblock %}
{% block container_title %}My projects
{% endblock %}
{% block body %}
	<div class="row">
		<div class="pb-4">
			<ul class="nav nav-pills " id="pills-tab" role="tablist">
				<li class="nav-item">
					<a class="nav-link active" id="Profile_Project_tab" data-bs-toggle="pill" href="pages-profile.html#Profile_Project">
					My projects ({{collaborative_research_projects|length}})</a>
				</li>

			</ul>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="tab-content" id="pills-tabContent">
					<div class="tab-pane fade active show" id="Profile_Project" role="tabpanel" aria-labelledby="Profile_Project_tab">

						<div class="row">

							<div class="card">
								<div class="card-header">
									<h4 class="card-title">All active collaborative projects
										{% if collaborative_research_projects|length>0%}

											<a href="#" class="avatar-box thumb-xxs align-self-center">
												<span class="avatar-title bg-soft-primary rounded-circle font-13 font-weight-normal">
													{{collaborative_research_projects|length}}

												</span>
											</a>
											{% else %}

										{% endif %}

									</h4>
									<p class="text-muted mb-0">
										All projects
									</p>
								</div>
								<!--end card-header-->
								<div class="card-body">
									<div class="table-responsive-sm">
										<table class="table table-bordered table-sm mb-0">
											<thead class="thead-light">


												{% if collaborative_research_projects|length>0%}
													<tr>

														<th>#</th>
														<th>Title</th>
                <th>Funding Organization</th>


														<th>Year Of Cemmencement</th>
														<th>End Date</th>
														<th>Progress</th>
														<th>Status</th>

														<th>Action</th>
													</tr>
												{% endif %}

											</thead>
											<tbody>
												{% for collaborative_research_project in collaborative_research_projects %}
													<tr>
														<td>{{ loop.index }}</td>
														<td>

            <a class='text-soft-primary' href="{{ path('app_c_r_p_collaborative_research_project_show', {'id': collaborative_research_project.id}) }}">

                {{ collaborative_research_project.title }}</a></td>
														<td>
														  {% if   collaborative_research_project.fundingOrganization %}
                    {% for fo in collaborative_research_project.fundingOrganization %}

                        <span title='{{fo.name}}' class="badge bg-soft-{{fo.acronymColor}} bg-xs">
						<small>{{fo.acronym}}</small>
												</span>
                    {% endfor %}
                {% endif %}


												</td>

														<td>
															{% if collaborative_research_project.YearOfCemmencement %}
																{{  collaborative_research_project.YearOfCemmencement|date('d, M Y h:i a') }}
															{% endif %}
														</td>
														<td>
															{% if collaborative_research_project.EndDate %}
																{{ collaborative_research_project.EndDate|date('d, M Y h:i a') }}
															{% endif %}
														</td>
														       <td nowrap='nowrap'>

    		{{ include('crp/collaborative_research_project/includes/progress.html.twig') }}

														</td>
															             <td nowrap='nowrap'>

  <span title='{{collaborative_research_project.ProjectStatus}}' class="badge bg-soft-{{collaborative_research_project.ProjectStatus.statusColor}} bg-xs">
												<small>{{collaborative_research_project.ProjectStatus.status}}</small>
												</span>
														</td>

														<td>

                    <a href="{{ path('app_c_r_p_collaborative_research_project_show', {'id': collaborative_research_project.id}) }}" class="btn btn-xs btn-soft-warning"><i class='fas fa-eye'
					></i></a>

														</td>
													</tr>
												{% else %}
													No records found  under this section
												{% endfor %}
											</tbody>
										</table>
									</div>
									<!--end /tableresponsive-->
								</div>
								<!--end card-body-->
							</div>
							<!--end card-body-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
