{% extends 'base.html.twig' %}

{% block title %}Currency index{% endblock %}

{% block body %}
   
   <div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
Currency							</h4>
							Total: ({{currencies|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('app_c_r_p_currency_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
 
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
				
					<table class="table table-bordered table-striped">
              <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for currency in currencies %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ currency.name }}</td>
                <td>
                    <a href="{{ path('app_c_r_p_currency_show', {'id': currency.id}) }}">show</a>
                    <a href="{{ path('app_c_r_p_currency_edit', {'id': currency.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
			</div>
		</div>
 {% endblock %}
