{% extends 'base.html.twig' %}

{% block title %}FundingScheme index{% endblock %}

{% block body %}

<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
    <h1>Funding Scheme</h1>
							</h4>
							Total: ({{funding_schemes|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('app_funding_scheme_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
 
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					
					<table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Color</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for funding_scheme in funding_schemes %}
            <tr>
                <td>{{ funding_scheme.id }}</td>
                <td>{{ funding_scheme.name }}</td>
                <td>{{ funding_scheme.acronymColor }}</td>
                <td><span class="badge bg-soft-{{ funding_scheme.acronymColor }}">{{ funding_scheme.acronym }}</td>
                <td>
                    <a href="{{ path('app_funding_scheme_show', {'id': funding_scheme.id}) }}" class="btn btn-xs btn-soft-primary">show</a>
                    <a href="{{ path('app_funding_scheme_edit', {'id': funding_scheme.id}) }}" class="btn btn-xs btn-soft-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
			</div>
		</div>
{% endblock %}
