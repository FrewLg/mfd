{% extends 'base.html.twig' %}

{% block title %}Template And Forms{% endblock %}

{% block body %}
   
	<div class="card">
		<div class="card-body row">

			{% if is_granted('mng_brd_mbr') %}


				<div class="col-3">
		 <a class="btn btn-sm btn-info float-left d-inline col-2" href="{{ path('call__details',{"id":call.id}) }}">back to list</a>
					<h6>Register new Template And Forms</h6>
					{{ include('board_member/_form.html.twig') }}
				</div>
				<div class="col-8 offset-1">
				{% else %}
					<div class="col-12">

					{% endif %}
					<form action="" class="float form-horizontal flex-column form-inline ">
						<h6 class=" d-inline">Template And Forms(Total:-{{template_and_forms.totalItemCount}})
						</h6>
						<input type="search" name="search" value="{{app.request.query.get('search')}}" class=" d-inline " placeholder="Search">

					</form>


    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Label</th>
                <th>Call</th>
                <th>College</th>
                <th>Created At</th>
                <th>Is Active</th>
              
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template_and_form in template_and_forms %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ template_and_form.label|split('',50)[0]~'...' }}</td>
                <td>{{ template_and_form.callFor|split('',30)[0]~'...' }}</td>
                <td>{{ template_and_form.college }}</td>
                <td>{{ template_and_form.createdAt ? template_and_form.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ template_and_form.isActive ? 'Yes' : 'No' }}</td>
               	{% if  is_granted('mng_tmplt_form') %}

										<td>
											{{ include('template_and_form/_delete_form.html.twig') }}
										</td>
									{% endif %}
								</tr>
							{% else %}
								<tr>
									<td colspan="4">no records found</td>
								</tr>
							{% endfor %}
        </tbody>
    </table>
	</div>
                	<div class="float-right" id="custompag	inator">{{ knp_pagination_render(template_and_forms) }}</div>

			</div>
		</div>
{% endblock %}
