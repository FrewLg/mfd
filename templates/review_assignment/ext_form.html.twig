{{ form_widget(externalreviewerform.external_reviewer_email) }}

{{ form_label(externalreviewerform.invitationDueDate  ) }}
{{ form_widget(externalreviewerform.invitationDueDate ) }}

<label class="col-xl-12 col-lg-12  ">
	{{ form_label(externalreviewerform.duedate  ) }}</label>


<div class="form-group row">
	<br>
	<div class="col-lg-12 col-xl-12">
		<div class="input-group">
			<span class="input-group-text">
				<i class="las la-calendar"></i>
			</span>
			{{ form_widget(externalreviewerform.duedate  ) }}


		</div>
	</div>
</div>

<div class="form-group row">
	<div class="col-lg-12 col-xl-12">
		File to be reviewed:

		<br>

		 

		{{ form_widget(externalreviewerform.reviewfile ) }}
		<br>
		<div class="input-group">
			{{ form_widget(externalreviewerform.file_tobe_reviewed ) }}
			<div id="ext_original_file" style="display:none">


				{% if review_assignment.submission.proposal %}

					<a href="{{ asset('/uploads/submission/'~ review_assignment.submission.proposal ) }}" class="text-primary">
						<b>Original proposal file</b>
						<i class="fa fa-download"></i>
					</a>
				{% endif %}
			</div>
		</div>
	</div>
</div>
<div class="col-lg-12 col-xl-12 offset-lg-12">
	<button type="submit" class="btn btn-outline-primary btn-sm">
		<i class="las la-save"></i>
		Assign external reviewer
	</button>

</div>
{{ form_end(externalreviewerform) }}


