{% extends 'base.html.twig' %}

{% block title %}Change password
{% endblock %}
{% block container_title %}
	Change password
{% endblock %}
{% block body %}

	<div class="card">
		<div class="card-header">
			<h5>Change password
			</h5>
		</div>
		<div class="card-body">


			{{ form_start(form) }}
			<div class="form-group row">
				<label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Old Password</label>
				<div class="col-lg-9 col-xl-8">
					<div class="input-group">
						<span class="input-group-text">
							<i class="las la-lock text-warning"></i>
						</span>
						{{ form_widget(form.password) }}


					</div>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">New Password</label>
				<div class="col-lg-9 col-xl-8">
					<div class="input-group">
						<span class="input-group-text">
							<i class="las la-lock text-success"></i>
						</span>
						{{ form_widget(form.plainPassword.first) }}


					</div>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Confirm Password</label>
				<div class="col-lg-9 col-xl-8">
					<div class="input-group">
						<span class="input-group-text">
							<i class="las la-lock"></i>
						</span>
						{{ form_widget(form.plainPassword.second) }}


					</div>
				</div>
			</div>


			<div class="col-lg-9 col-xl-8 offset-lg-3">
				<button class="btn btn-soft-primary float-right">
					<i class="las la-lock"></i>
					{{ button_label|default('Update password') }}</button>

			</div>

			{{ form_end(form) }}


		</div>
	</div>

{% endblock %}
