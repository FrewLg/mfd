					<div class="row">
						<div class="col-12">
							<div class="card">
								<div class="card-header">
									<div class="row align-items-center">
										<div class="col">
											<h4 class="card-title">Publications

												{% if user.Publications|length>0%}

													<a href="#" class="avatar-box thumb-xxs align-self-center">
														<span class="avatar-title bg-soft-primary rounded-circle font-13 font-weight-normal">
															{{user.Publications|length}}

														</span>
													</a>
													{% else %}

												{% endif %}
											</h4>
										</div>
										<!--end col-->
									</div>
									<!--end row-->
								</div>

								<div class="card-body ">
									<ol>
										{% for publication in user.Publications %}
											<li>
												<h4 class="mb-0 fw-semibold ">
													{{ publication.title}}
												</h4>
												<p class="mb-0 fw-semibold text-muted">Journal :
													{{ publication.journalName}}</p>
												<p class="mb-0 fw-semibold text-muted">Year of Publication:
