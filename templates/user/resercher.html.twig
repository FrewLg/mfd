											<div class="col">
												<h4 class="card-title">Review assignments

													{% if user.reviewAssignments|length>0%}

														<a href="#" class="avatar-box thumb-xxs align-self-center">
															<span class="avatar-title bg-soft-primary rounded-circle font-13 font-weight-normal">
																{{user.reviewAssignments|length}}

															</span>
														</a>
														{% else %}

													{% endif %}
												</h4>
											</div>
											<!--end col-->
										</div>
										<!--end row-->
									</div>

									<div class="card-body ">
										<ol>
											{% for submission in user.reviewAssignments %}
