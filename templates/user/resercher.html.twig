{% block body %}


	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body p-0"></div>
				<!--end card-body-->
				<div class="card-body">
					<div class="dastone-profile">
						<div class="row">
							<div class="col-lg-4 align-self-center mb-3 mb-lg-0">
								<div class="dastone-profile-main">
									<div class="dastone-profile-main-pic">
										
										{% if    user.userInfo.image %}

											<img src="{{ asset('files/profile_pictures/'~user.userInfo.image ) }}" alt="" class="rounded-circle" style="width:110px; height:110px;">
