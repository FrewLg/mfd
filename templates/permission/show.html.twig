{% extends 'base.html.twig' %}

{% block title %}Permission{% endblock %}

{% block body %}
    <h1>Permission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ permission.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ permission.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ permission.code }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ permission.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('permission_index') }}" class="btn btn-soft-success btn-sm">back to list</a>

    <a href="{{ path('permission_edit', {'id': permission.id}) }}" class="btn btn-soft-primary btn-sm" >edit</a>
 
{% endblock %}
