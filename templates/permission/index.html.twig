{% extends 'base.html.twig' %}

{% block title %}Permission index
{% endblock %}

{% block body %}


	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								Permissions
							</h4>
							Total: ({{permissions|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('permission_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Code</th>
								<th>Description</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for permission in permissions %}
								<tr>
									<td>{{ loop.index }}</td>
									<td>{{ permission.name }}</td>
									<td>{{ permission.code }}</td>
									<td>{{ permission.description }}</td>
									<td>
										<a href="{{ path('permission_show', {'id': permission.id}) }}" class="btn btn-soft-success btn-sm">show</a>
										<a href="{{ path('permission_edit', {'id': permission.id}) }}" class="btn btn-soft-primary btn-sm">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<div class="navigation">{{ knp_pagination_render(permissions) }}</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
