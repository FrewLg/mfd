{% extends 'base.html.twig' %}

{% block title %}Email Message
{% endblock %}
{% block container_title %}Email Message
{% endblock %}
{% block body %}

	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<div class="row align-items-center">
						<div class="col">
							<h4 class="card-title">
								Email Message
							</h4>
							Total: ({{email_messages|length}})
						</div>
						<!--end col-->
						<div class="col-auto">
							<a href="{{ path('email_message_new') }}" class='btn btn-primary btn-sm'>
								Create   new
							</a>
						</div>
						<!--end col-->
					</div>
				</div>
				<div class="card-body">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>Email key</th>
								<th>Subject</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for email_message in email_messages %}
								<tr>
									<td>{{ loop.index }}</td>
									<td>{{ email_message.emailKey }}</td>
									<td>{{ email_message.subject |raw}}</td>
									<td>
										<a href="{{ path('email_message_show', {'id': email_message.id}) }}" class="btn btn-xs btn-soft-info">show</a>
										<a href="{{ path('email_message_edit', {'id': email_message.id}) }}" class="btn btn-xs btn-soft-primary">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					{{ knp_pagination_render(email_messages) }}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
